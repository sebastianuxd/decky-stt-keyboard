{
  "name": "decky-stt-keyboard",
  "version": "1.0.0",
  "description": "Speech-to-text virtual keyboard plugin for Steam Deck",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c && shx cp plugin.json dist/ && shx cp main.py dist/ && shx cp -r defaults dist/",
    "watch": "rollup -c -w",
    "deploy": "pnpm run build && rsync -azp --delete --rsh=ssh --exclude='.git' --exclude='node_modules' dist/ deck@${DECK_IP}:homebrew/plugins/decky-stt-keyboard",
    "zip": "npm run build && cd dist && shx rm -f ../decky-stt-keyboard.zip && zip -r ../decky-stt-keyboard.zip ."
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "speech-to-text",
    "keyboard"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "decky-frontend-lib": "^3.25.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "18.2.58",
    "@types/react-dom": "18.2.19",
    "rollup": "^4.12.0",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "pnpmOverrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}